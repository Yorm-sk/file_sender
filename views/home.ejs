<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FileSender</title>
    <link rel="stylesheet" href="/static/css/bootstrap.css">
</head>

<body class="container bg-dark">
    <div class="row mt-3">
        <div class="col-6 offset-3 bg-dark-subtle">
            <h1 class="text-center mb-3">Files to send</h1>
            <div class="mb-3">
                <form action="/?refreshFiles=true" method="POST">
                    <button class="btn btn-dark">Refresh files</button>
                </form>
            </div>
            <% for (file of files) { %>
                <div class="mb-3">
                    <div class="d-inline pt-2">
                        <a class="link-dark link-underline-opacity-0" href="/download/<%= file %>"><%= file %></a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</body>
<script src="/static/js/bootstrap.js"></script>

</html>